{
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["typings", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
